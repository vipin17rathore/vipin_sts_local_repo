package com.boa.SpringBootIn28Minutes.dao;

import java.util.List;

import com.boa.SpringBootIn28Minutes.bean.User;
import com.boa.SpringBootIn28Minutes.bean.Users;

public class UserDao {

	public static List<User> Users;
	public static int userCount = 3;

	static {
		User user = new User();
		user.setId(1);
		user.setMobNo("one two");
		user.setName("Ram");

		Users.add(user);

		user.setId(2);
		user.setMobNo("three");
		user.setName("Ram..12");

		Users.add(user);

		user.setId(3);
		user.setMobNo("four");
		user.setName("Ram..12345");

		Users.add(user);
	}

	public Users getUsers() {
		Users users1 = new Users();
		users1.setUsers(Users);
		return users1;
	}

	public User getUser(int id) {
		for (User user : Users) {
			if (user.getId() == id) {
				return user;
			}
		}
		return new User();
	}

	public String addUser(User user) {
		
		if(user.getId()==-1) {
			user.setId(++userCount);
			Users.add(user);
			return "user added..!!"
		}

		for (User usr : Users) {
			if (user.getId() == usr.getId()) {
				return "already-exist";
			}
		}

		Users.add(user);
		return "user added";
	}

	public User modifyUser(User user) {
		return null;
	}

	public String removeUser(int id) {
	}
}
