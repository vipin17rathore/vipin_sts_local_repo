package com.example.demo;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

import com.example.demo.entity.Person;
import com.example.demo.repository.PersonJpaRepositoryImpl;

@SpringBootApplication
public class SpringJpaApplication implements CommandLineRunner {

	@Autowired
	PersonJpaRepositoryImpl jpaImpl;
	
	public static void main(String[] args) {
		SpringApplication.run(SpringJpaApplication.class, args);
	}

	@Override
	public void run(String... args) throws Exception {

		System.out.println("get by id-->"+jpaImpl.personById(5));
		System.out.println("create-->"+jpaImpl.addPerson(new Person(3, "QWE", "location")));
		System.out.println("get-->"+jpaImpl.allPerson());		
	}

}
